<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Fractal.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Fractal.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Fractal">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Window.Styles>
    <Style Selector="Label">
      <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <Style Selector="TextBox">
      <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>
  </Window.Styles>
  
  <Grid RowDefinitions="Auto,Auto">
    <StackPanel Orientation="Vertical">
      <StackPanel Margin="5,10,5,0" Orientation="Horizontal">
        <Label>x0:</Label>
        <TextBox Name="MinX"></TextBox>
        <Label>y0:</Label>
        <TextBox Margin="0,0,100,0" Name="MinY"></TextBox>

        <Label>x:</Label>
        <TextBox Name="MaxX"></TextBox>

        <Label>y: </Label>
        <TextBox Name="MaxY"></TextBox>

        <Button Margin="20,0,0,0">Сгененировать</Button>
      </StackPanel>

      <Canvas Width="800" Height="420">
        <Canvas.Background>
          <ImageBrush/>
        </Canvas.Background>
      </Canvas>
    </StackPanel>
  </Grid>    
</Window>
